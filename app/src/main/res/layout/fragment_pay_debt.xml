<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".PayDebtFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/how_much"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/debt_edit_text"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:hint="@string/pln"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/to_whom"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/users_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:paddingStart="25dp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/save_pay_debt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@color/colorButtons"
            android:text="@string/pay_debt" />
    </FrameLayout>


</LinearLayout>